{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "my terraform modules",
      "matchDepNames": [
        "github.com/reegnz/terraform-modules"
      ],
      "versioning": "regex:^(?<compatibility>.*)v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "matchDatasources": [
        "terraform-provider",
        "terraform-module"
      ],
      "registryUrls": [
        "https://registry.opentofu.org"
      ]
    }
  ]
}

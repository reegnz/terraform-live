{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": [
    "terraform",
    "custom.regex"
  ],
  "packageRules": [
    {
      "description": "my terraform modules",
      "matchDepNames": [
        "github.com/reegnz/terraform-modules"
      ],
      "versioning": "regex:^(?<compatibility>.*)v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "matchDatasources": [
        "terraform-provider",
        "terraform-module"
      ],
      "registryUrls": [
        "https://registry.opentofu.org"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "tenv .opentofu-version manager",
      "fileMatch": [
        "(^|/)\\.opentofu-version$"
      ],
      "matchStrings": [
        "(?<currentValue>.*)"
      ],
      "packageNameTemplate": "opentofu/opentofu",
      "depNameTemplate": "opentofu",
      "datasourceTemplate": "github-releases"
    }
  ]
}
